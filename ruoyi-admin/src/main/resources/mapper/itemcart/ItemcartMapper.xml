<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.itemcart.mapper.ItemcartMapper">
    
    <resultMap type="Itemcart" id="ItemcartResult">
        <result property="itemcartId"    column="itemcartId"    />
        <result property="uId"    column="uId"    />
        <result property="iId"    column="iId"    />
        <result property="number"    column="number"    />
    </resultMap>

    <sql id="selectItemcartVo">
        select itemcartId, uId, iId, number from itemcart
    </sql>

    <select id="selectItemcartList" parameterType="Itemcart" resultMap="ItemcartResult">
        <include refid="selectItemcartVo"/>
        <where>  
            <if test="itemcartId != null "> and itemcartId = #{itemcartId}</if>
            <if test="uId != null "> and uId = #{uId}</if>
            <if test="iId != null "> and iId = #{iId}</if>
            <if test="number != null "> and number = #{number}</if>
        </where>
    </select>
    
    <select id="selectItemcartByItemcartId" parameterType="Long" resultMap="ItemcartResult">
        <include refid="selectItemcartVo"/>
        where itemcartId = #{itemcartId}
    </select>
        
    <insert id="insertItemcart" parameterType="Itemcart" useGeneratedKeys="true" keyProperty="itemcartId">
        insert into itemcart
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uId != null">uId,</if>
            <if test="iId != null">iId,</if>
            <if test="number != null">number,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uId != null">#{uId},</if>
            <if test="iId != null">#{iId},</if>
            <if test="number != null">#{number},</if>
         </trim>
    </insert>

    <update id="updateItemcart" parameterType="Itemcart">
        update itemcart
        <trim prefix="SET" suffixOverrides=",">
            <if test="uId != null">uId = #{uId},</if>
            <if test="iId != null">iId = #{iId},</if>
            <if test="number != null">number = #{number},</if>
        </trim>
        where itemcartId = #{itemcartId}
    </update>

    <delete id="deleteItemcartByItemcartId" parameterType="Long">
        delete from itemcart where itemcartId = #{itemcartId}
    </delete>

    <delete id="deleteItemcartByItemcartIds" parameterType="String">
        delete from itemcart where itemcartId in 
        <foreach item="itemcartId" collection="array" open="(" separator="," close=")">
            #{itemcartId}
        </foreach>
    </delete>
</mapper>