<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.store.mapper.StoreMapper">
    
    <resultMap type="Store" id="StoreResult">
        <result property="sId"    column="sId"    />
        <result property="uId"    column="uId"    />
        <result property="sname"    column="sname"    />
        <result property="logo"    column="logo"    />
        <result property="description"    column="description"    />
    </resultMap>

    <sql id="selectStoreVo">
        select sId, uId, sname, logo, description from store
    </sql>

    <select id="selectStoreList" parameterType="Store" resultMap="StoreResult">
        <include refid="selectStoreVo"/>
        <where>  
            <if test="sId != null "> and sId = #{sId}</if>
            <if test="uId != null "> and uId = #{uId}</if>
            <if test="sname != null  and sname != ''"> and sname like concat('%', #{sname}, '%')</if>
            <if test="logo != null  and logo != ''"> and logo = #{logo}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
        </where>
    </select>
    
    <select id="selectStoreBySId" parameterType="Long" resultMap="StoreResult">
        <include refid="selectStoreVo"/>
        where sId = #{sId}
    </select>
        
    <insert id="insertStore" parameterType="Store">
        insert into store
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sId != null">sId,</if>
            <if test="uId != null">uId,</if>
            <if test="sname != null">sname,</if>
            <if test="logo != null">logo,</if>
            <if test="description != null">description,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sId != null">#{sId},</if>
            <if test="uId != null">#{uId},</if>
            <if test="sname != null">#{sname},</if>
            <if test="logo != null">#{logo},</if>
            <if test="description != null">#{description},</if>
         </trim>
    </insert>

    <update id="updateStore" parameterType="Store">
        update store
        <trim prefix="SET" suffixOverrides=",">
            <if test="uId != null">uId = #{uId},</if>
            <if test="sname != null">sname = #{sname},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="description != null">description = #{description},</if>
        </trim>
        where sId = #{sId}
    </update>

    <delete id="deleteStoreBySId" parameterType="Long">
        delete from store where sId = #{sId}
    </delete>

    <delete id="deleteStoreBySIds" parameterType="String">
        delete from store where sId in 
        <foreach item="sId" collection="array" open="(" separator="," close=")">
            #{sId}
        </foreach>
    </delete>
</mapper>